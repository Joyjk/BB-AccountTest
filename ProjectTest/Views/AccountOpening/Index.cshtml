@model AccountOpeningModel

@{
    ViewData["Title"] = "Document Upload";
}

<partial name="_Timeline" model="Model" />

<div class="card">
    <div class="card-header">
        <h3>Capture/Upload Image of Original NID Or Smart Card</h3>
    </div>
    <div class="card-body">
        <form asp-action="NextStep" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="CurrentStep" value="6" />

            <div class="form-group">
                <h5>Intervals: capture areas</h5>
                <ul>
                    <li>In: "Voice" (total: 100)</li>
                    <li>In: "Sense"</li>
                    <li>In: "Game game"</li>
                    <li>In: "Browse"</li>
                    <li>In: "Carnes"</li>
                </ul>
            </div>

            <div class="form-group">
                <label>Front Side of NID/Smart Card</label>
                <input type="file" asp-for="NIDFrontImage" class="form-control-file" accept="image/*" required />
            </div>

            <div class="form-group">
                <label>Back Side of NID/Smart Card</label>
                <input type="file" asp-for="NIDBackImage" class="form-control-file" accept="image/*" required />
            </div>

            <div class="form-group text-center">
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("PreviousStep", new { currentStep = 6 })'">
                    Previous
                </button>
                <button type="submit" class="btn btn-primary">Next</button>
            </div>
        </form>
    </div>
</div>